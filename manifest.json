{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "version": "1.0.1",
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": "img/icon48.png",
        "default_title": "__MSG_name__",
        "default_popup": "html/welcome.html"
    },
    "background": {
        "page": "html/background.html"
    },
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "Qwant Junior",
            "keyword": "qj",
            "search_url": "https://www.qwantjunior.com/?q={searchTerms}&client=ext-firefox-sb",
            "favicon_url": "https://www.qwantjunior.com/img/edu/favicon.ico",
            "suggest_url": "https://api.qwant.com/egp/suggest/?q={searchTerms}&client=opensearch&lang=__MSG_locale__",
            "is_default": true
        }
    },
    "omnibox": {
        "keyword": "q"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "activeTab",
        "privacy",
        "https://*.qwant.com/*",
        "https://www.qwantjunior.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.qwantjunior.com/*"
            ],
            "css": [
                "css/no-popin.css"
            ],
            "js": [
                "js/events.js",
                "js/contentScript.js"
            ]
        }
    ]
}
